<Window x:Class="EsriCarRentalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:local="clr-namespace:EsriCarRentalApp" 
        Title="Esri Rental App" Height="400" Width="600">

    <!-- Grid Layout -->
    <Grid>
        <!-- Empty Grid (3/4 of the view) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <ContentControl Grid.Column="0" x:Name="MapViewer"/>
        <!--<local:MapViewer Grid.Column="0"/>-->

        <ContentControl Grid.Column="1" x:Name="Rental"/>
        <!--<local:Rental Grid.Column="1"/>-->
    </Grid>
</Window>

